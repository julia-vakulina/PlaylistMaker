<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SettingsLayout"
    android:orientation="vertical">
    <LinearLayout
        style="@style/StandartHorizontalLayout"
        android:padding="0dp">
        <Button
            android:id="@+id/button_left_search"
            style="@style/SettingsButton"
            app:icon="@drawable/left" />
        <TextView
            style="@style/SettingsText"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/search"
            android:textSize="@dimen/text_size_big"
            android:padding="@dimen/button_margin"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/button_margin"

            android:orientation="horizontal"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="56dp"
            android:layout_marginHorizontal="@dimen/button_margin">
            <EditText
                android:id="@+id/editTextSearch"
                style="@style/SearchEditText"
                android:layout_width="match_parent"
                android:inputType="text"
                android:hint="@string/search"
                android:textColorHint="@color/grey"
                android:lines="1"
                android:textSize="@dimen/text_size_little"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="8dp"
                android:layout_marginVertical="8dp"/>
            <ImageView
                android:id="@+id/clearIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/clear"
                android:visibility="gone"
                />
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trackView"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</FrameLayout>