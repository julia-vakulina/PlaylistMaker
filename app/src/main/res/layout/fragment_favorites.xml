<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SettingsLayout"
    android:orientation="vertical"
    tools:context=".media.ui.FavoritesFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/favorite_tracks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_favorite_tracks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/button_margin"
            android:visibility="visible"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout
    android:id="@+id/placeHolderFavorites"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginTop="-170dp">
    <ImageView
        style="@style/placeHolderNotFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <TextView
        style="@style/TextViewSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin"
        android:text="@string/media_is_empty"
        android:textSize="19sp"/>
</LinearLayout>
</FrameLayout>