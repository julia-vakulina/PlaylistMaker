<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SettingsLayout"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/button_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/string_height"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/snake"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewSearch"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Yesterday (Remastered 2009)" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/TextViewSearch2"
                    android:id="@+id/artistTrack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="The Beatles"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/icon_padding"
                    android:src="@drawable/ellipse_1"/>
                <TextView
                    style="@style/TextViewSearch2"
                    android:id="@+id/timeTrack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    tools:text="2:55"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_height="wrap_content"
            style="@style/SettingsButton"
            app:iconTint="@color/grey"
            app:icon="@drawable/right"/>
    </LinearLayout>
</FrameLayout>