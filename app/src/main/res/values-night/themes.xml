<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="SettingsSwitch">
        <item name="android:layout_width">@dimen/text_height</item>
        <item name="android:layout_height">@dimen/text_height</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="iconGravity">textEnd</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">@color/light_blue</item>
        <item name="android:checked">true</item>
    </style>
    <style name="StandartLayout">
        <item name="android:background">@color/new_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="SettingsLayout">
        <item name="android:background">@color/new_black</item>
    </style>
    <style name="SettingsText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_little</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsButton">
        <item name="android:layout_width">@dimen/text_height</item>
        <item name="android:layout_height">@dimen/text_height</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="iconGravity">textEnd</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/white</item>
    </style>
    <style name="SearchEditText">
        <item name="android:background">@color/light_grey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textColorHint">@color/new_black</item>
        <item name="drawableTint">@color/new_black</item>
    </style>
    <style name="TextViewSearch">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextViewSearch2">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="placeHolderNotFound">
        <item name="android:src">@drawable/dark_not_found</item>
    </style>
    <style name="placeHolderNoConnect">
        <item name="android:src">@drawable/dark_no_connect</item>
    </style>
    <style name="buttonUpdate">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>
    <style name="TrackButton1">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="iconGravity">textEnd</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/new_black_transp</item>
        <item name="android:src">@drawable/plus_dark</item>
    </style>
    <style name="TrackButton2">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="iconGravity">textEnd</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/new_black_transp</item>
        <item name="android:src">@drawable/favorite_dark</item>
    </style>
    <style name="TrackButtonPlay">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="iconGravity">textEnd</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:src">@drawable/play</item>
    </style>
    <style name="TextPlayer">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="layout_constraintEnd_toStartOf">@id/right_guideline</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TabLayout">
        <item name="android:background">@color/new_black</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>